@using DoktorKapisi.ViewModels
@model DoktorGirisViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Doktor Kapısı</title>

    <meta name="keywords" content="WebSite Template" />
    <meta name="description" content="Doktor Kapısı">
    <meta name="author" content="okler.net">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/DoktorKapısı/img/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/DoktorKapısı/img/apple-touch-icon.png">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- Web Fonts  -->
    <link id="googleFonts"
          href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800%7CShadows+Into+Light&display=swap"
          rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/animate/animate.compat.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/simple-line-icons/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/magnific-popup/magnific-popup.min.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/DoktorKapısı/css/theme.css">
    <link rel="stylesheet" href="~/DoktorKapısı/css/theme-elements.css">
    <link rel="stylesheet" href="~/DoktorKapısı/css/theme-blog.css">
    <link rel="stylesheet" href="~/DoktorKapısı/css/theme-shop.css">

    <!-- Revolution Slider CSS -->
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/rs-plugin/css/settings.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/rs-plugin/css/layers.css">
    <link rel="stylesheet" href="~/DoktorKapısı/vendor/rs-plugin/css/navigation.css">

    <!-- Demo CSS -->
    <link rel="stylesheet" href="~/DoktorKapısı/css/demos/demo-app-landing.css">

    <!-- Skin CSS -->
    <link id="skinCSS" rel="stylesheet" href="~/DoktorKapısı/css/skins/skin-app-landing.css">

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/DoktorKapısı/css/custom.css">

    <!-- Head Libs -->
    <script src="~/DoktorKapısı/vendor/modernizr/modernizr.min.js"></script>
    <style>
        .equal-height-card {
            height: 80%;
        }
    </style>
</head>
<body data-plugin-scroll-spy data-plugin-options="{'target': '#header'}">

    <div class="body">
        <header id="header"
                class="header-transparent header-transparent-light-bottom-border header-transparent-light-bottom-border-1 header-effect-shrink"
                data-plugin-options="{'stickyEnabled': true, 'stickyEffect': 'shrink', 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': false, 'stickyChangeLogo': true, 'stickyStartAt': 30, 'stickyHeaderContainerHeight': 70}">
            <div class="header-body border-top-0 header-body-bottom-border">
                <div class="header-container container">
                    <div class="header-row">
                        <div class="header-column">
                            <div class="header-row">
                                <div class="header-logo">
                                    <a href="/Default/Index/">
                                        <img alt="DoktorKapisi" width="70" height="70"
                                             src="~/DoktorKapısı/img/demos/DoktorKapisi/DoktorKapısıLOGO.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="header-column justify-content-end">
                            <div class="header-row">
                                <div class="header-nav header-nav-links">
                                    <div class="header-nav-main header-nav-main-text-capitalize header-nav-main-square header-nav-main-dropdown-no-borders header-nav-main-effect-2 header-nav-main-sub-effect-1">
                                        <nav class="collapse">
                                            <ul class="nav nav-pills" id="mainNav">
                                                <li>
                                                    <a href="/Default/Index/" class="nav-link active" data-hash
                                                       data-hash-offset="0" data-hash-offset-lg="70">Anasayfa</a>
                                                </li>
                                                <li>
                                                    <a href="/Default/Hakkimizda/" class="nav-link active" data-hash
                                                       data-hash-offset="0" data-hash-offset-lg="70">Hakkımızda</a>
                                                </li>
                                                <li>
                                                    <a href="/DoktorGiris/Index/" class="nav-link active" data-hash
                                                       data-hash-offset="0" data-hash-offset-lg="70">Doktor Girişi</a>
                                                </li>
                                                <li>
                                                    <a href="/DoktorKayit/Kayit/" class="nav-link active" data-hash
                                                       data-hash-offset="0" data-hash-offset-lg="70">
                                                        Doktor Musunuz?
                                                    </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div role="main" class="main">
            <section class="page-header page-header-modern bg-color-white page-header-lg">
                <div class="container">
                    <div class="row">
                    </div>
                </div>
            </section>
            <div class="row justify-content-md-center">
                <div class="col-md-4">
                    <div class="featured-box featured-box-primary text-start mt-0">
                        <div class="box-content">
                            <h4 class="color-primary font-weight-semibold text-4 text-uppercase mb-3 text-center">HEKİM YA DA UZMAN MISINIZ?</h4>
                            <form method="post" class="needs-validation" novalidate="novalidate">
                                <div class="row">
                                    <div class="form-group col">
                                        <label class="form-label">Ad</label>
                                        <input type="text" name="Ad" value="" class="form-control form-control-lg" required="">
                                    </div>
                                    <div class="form-group col">
                                        <label class="form-label">Soyad</label>
                                        <input type="text" name="Soyad" value="" class="form-control form-control-lg" required="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col">
                                        <label class="form-label">Mail</label>
                                        <input type="text" name="Mail" value="" class="form-control form-control-lg" required="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col">
                                        <label class="form-label">Şifre</label>
                                        <input type="password" name="Sifre" value="" class="form-control form-control-lg" required="">
                                    </div>
                                    <div class="form-group col">
                                        <label class="form-label">Telefon</label>
                                        <input type="number" name="Telefon" value="" class="form-control form-control-lg" required="">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2">Uzmanlık Alanı</label>
                                    <div class="col-lg-9">
                                        <div class="custom-select-1">
                                            @Html.DropDownListFor(m => m.BolumListesi, new SelectList(Model.BolumListesi, "Value", "Text"), "Uzmanlık Seçin", new { @class = "form-control text-3 h-auto py-2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2">Şehir</label>
                                    <div class="col-lg-9">
                                        <div class="custom-select-1">
                                            @Html.DropDownListFor(m => m.SehirListesi, new SelectList(Model.SehirListesi, "Value", "Text"), "Şehir Seçin", new { @class = "form-control text-3 h-auto py-2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2">Şehir</label>
                                    <div class="col-lg-9">
                                        <div class="custom-select-1">
                                            @Html.DropDownListFor(m => m.CinsiyetListesi, new SelectList(Model.CinsiyetListesi, "Value", "Text"), "Cinsiyet Seçin", new { @class = "form-control text-3 h-auto py-2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2">Kimlik Kartı</label>
                                    <div class="col-lg-9">
                                        <input type="file" name="KimlikKarti" class="form-control-file" accept=".jpg, .jpeg, .png, .pdf" style="padding: 5px; width: 400px;">
                                        <small class="form-text text-muted">Lütfen kimlik kartınızın fotoğrafını veya taranmış kopyasını yükleyin (.jpg, .jpeg, .png, .pdf).</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-9">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" name="terms" class="custom-control-input" id="terms">
                                            <label class="custom-control-label text-2" for="terms">Hizmet şartlarını okudum ve <a href="#">kabul ediyorum.</a></label>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-3">
                                        <input type="submit" value="Kayıt ol" class="btn btn-primary btn-modern float-end">
                                    </div>
                                    <div class="form-group col-md-auto text-center">
                                        <a class="text-decoration-none text-color-hover-primary font-weight-semibold text-3" href="/DoktorGiris/Index/">Kaydım zaten var</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="footer" class="bg-transparent border-0">
        <div class="footer-copyright bg-transparent">
            <div class="container">
                <hr class="bg-dark opacity-1 m-0">
                <div class="row py-4">
                    <div class="col-md-6 py-4 text-center text-md-start">
                        <p class="mb-0 text-3 opacity-8 font-weight-medium">
                            Mevsim © Copyright 2024. Tüm haklar
                            gizlidir.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Vendor -->
    <script src="~/DoktorKapısı/vendor/jquery/jquery.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.appear/jquery.appear.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.cookie/jquery.cookie.min.js"></script>
    <script src="~/DoktorKapısı/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.validation/jquery.validate.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.easy-pie-chart/jquery.easypiechart.min.js"></script>
    <script src="~/DoktorKapısı/vendor/jquery.gmap/jquery.gmap.min.js"></script>
    <script src="~/DoktorKapısı/vendor/lazysizes/lazysizes.min.js"></script>
    <script src="~/DoktorKapısı/vendor/isotope/jquery.isotope.min.js"></script>
    <script src="~/DoktorKapısı/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/DoktorKapısı/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/DoktorKapısı/vendor/vide/jquery.vide.min.js"></script>
    <script src="~/DoktorKapısı/vendor/vivus/vivus.min.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/DoktorKapısı/js/theme.js"></script>

    <!-- Current Page Vendor and Views -->
    <script src="~/DoktorKapısı/js/views/view.contact.js"></script>

    <!-- Demo -->
    <script src="~/DoktorKapısı/js/demos/demo-app-landing.js"></script>

    <!-- Theme Custom -->
    <script src="~/DoktorKapısı/js/custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/DoktorKapısı/js/theme.init.js"></script>

</body>

</html>

